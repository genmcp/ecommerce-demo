# Llama Stack Server Dockerfile
# Python-based server for LLM inference abstraction

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Llama Stack
RUN pip install --no-cache-dir llama-stack llama-stack-client

# Copy configuration files
COPY llama-stack-config/ /app/config/

# Create directories for persistent data
RUN mkdir -p /app/data

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV HOME=/app

# Expose the default port
EXPOSE 8321

# Default to OpenAI configuration for production
# Override with LLAMA_STACK_CONFIG env var or volume mount
ENV LLAMA_STACK_CONFIG=/app/config/run-openai.yaml

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8321/health || exit 1

# Run Llama Stack server
CMD ["sh", "-c", "llama stack run ${LLAMA_STACK_CONFIG} --port 8321"]

